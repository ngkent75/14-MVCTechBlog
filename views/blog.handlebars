<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-comm">Comment:</label>
        <textarea class="form-input" id="blog-comm" name="blog-comm"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
</div>